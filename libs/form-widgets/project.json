{
  "name": "@gova/form-widgets",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 6006,
        "configDir": "libs/form-widgets/.storybook",
        "open": true
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest --config=libs/form-widgets/vitest.storybook.config.ts"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --coverage --config=libs/form-widgets/vitest.storybook.config.ts"
      }
    }
  }
}
